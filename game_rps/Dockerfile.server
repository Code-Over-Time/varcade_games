FROM node:16-alpine

WORKDIR /usr/app

RUN mkdir game_rps
RUN mkdir game_rps/server

WORKDIR game_rps

ADD game_engine ./game_engine

WORKDIR server

ADD server/package.json .
ADD server/index.js .
ADD server/game_server ./game_server


RUN npm update
RUN npm install --quiet
RUN npm install supervisor -g

CMD npm run game_rps_debug
